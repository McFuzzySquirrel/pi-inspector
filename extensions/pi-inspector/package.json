{
  "name": "pi-inspector",
  "displayName": "Pi Inspector",
  "description": "Wires Copilot Agent Mode to a local Raspberry Pi inspector API.",
  "version": "0.0.4",
  "engines": { "vscode": ">=1.90.0" },
  "publisher": "mcfuzzysquirrel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcfuzzysquirrel/pi-inspector.git"
  },
  "categories": ["Other"],
  "activationEvents": ["onStartupFinished", "onChatParticipant:pi-inspector"],
  "main": "dist/extension.js",
  "contributes": {
    "commands": [
      { "command": "piInspector.health", "title": "Pi Inspector: Health" },
  { "command": "piInspector.capabilities", "title": "Pi Inspector: Capabilities" },
  { "command": "piInspector.registerTools", "title": "Pi Inspector: Register LM Tools" },
  { "command": "piInspector.showOutput", "title": "Pi Inspector: Show Output" },
  { "command": "piInspector.usbList", "title": "Pi Inspector: USB List" },
  { "command": "piInspector.usbWatch", "title": "Pi Inspector: USB Watch (Diff)" }
    ],
    "chatParticipants": [
      {
        "id": "pi-inspector",
        "name": "PiInspector",
        "description": "Query Raspberry Pi environment via local inspector API"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Pi Inspector",
      "properties": {
        "piInspector.port": {
          "type": "number",
          "default": 5050,
          "description": "Local port of the Pi Inspector API"
        }
      }
    }
  },
  "enabledApiProposals": [
    "chatParticipantAdditions",
    "languageModelCapabilities",
    "languageModelSystem",
  "languageModelToolResultAudience",
  "languageModelDataPart"
  ],
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --platform=node --format=cjs --external:vscode",
    "watch": "npm run build -- --watch",
    "typecheck": "tsc -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.90.0",
    "esbuild": "^0.21.5",
    "typescript": "^5.6.2",
  "@vscode/vsce": "^3.6.0"
  }
}
